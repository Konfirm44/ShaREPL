<style>
    .floating-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
    }
</style>

<div class="floating-button">
    <button class="btn btn-primary" @onclick="OnClick">@ChildContent</button>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; init; } = default!;

    [Parameter]
    public EventCallback OnClick { get; init; }
}
